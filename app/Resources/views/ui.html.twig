<!DOCTYPE html>
<html>
<head>
    <meta charset=utf-8 />
    <meta name="viewport" content="user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, minimal-ui">
    <title>TTP events - time traveller planner</title>
    <link href="http://{{ baseref }}/ui/css/bootstrap.css" rel="stylesheet">
    <link href="http://{{ baseref }}/ui/css/reset.css" rel="stylesheet">
    <link href="http://{{ baseref }}/ui/css/style.css" rel="stylesheet">
    <base href="http://{{ baseref }}/now/">
</head>
<body>
<div class="container-fluid">
    <!--input data section -->
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 col-xs-12">
            <div class="input-group search-group">
                <form action="http://{{ baseref }}/plan" method="post">
                    <div class="input-group">
                        <input type="text" class="form-control graph-input" id="graph-input" name="info">
                                <span class="input-group-btn">
                                <button class="btn btn-info" type="submit">Create event</button>
                               </span>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 col-md-2"></div>
    </div>
    <!-- Events section-->
    <div class="row graph-section">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <ul id="event_list"></ul>
        </div>
    </div>

    <!--timeline section-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="cd-horizontal-timeline" id="ttp-events">
                <div class="timeline">
                    <div class="events-wrapper">
                        <div class="events">
                            <ol></ol>
                            <span class="filling-line" aria-hidden="true"></span>
                        </div> <!-- .events -->
                    </div> <!-- .events-wrapper -->

                    <ul class="cd-timeline-navigation">
                        <li><a href="#0" class="prev inactive">Prev</a></li>
                        <li><a href="#0" class="next">Next</a></li>
                    </ul> <!-- .cd-timeline-navigation -->
                </div> <!-- .timeline -->

                <div class="events-content hidden">
                    <ol></ol>
                </div> <!-- .events-content -->
            </div>
        </div>
    </div>

    <!-- Graph section-->
    <div class="row graph-section">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="graph-wrapper">
                <div id="daily-graph-present"></div>
            </div>
        </div>
    </div>

    <!--<div class="row clearfix" id="graph-wrapper">
        <div id="daily-graph"></div>
    </div>-->
</div>

{% javascripts '@AppBundle/Resources/public/js/jquery-2.1.4.js'
'@AppBundle/Resources/public/js/bootstrap.js'
'@AppBundle/Resources/public/js/cytoscape.js'
'@AppBundle/Resources/public/js/timeline.js'
'@AppBundle/Resources/public/js/ttp.js'
%}
<script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts %}
</body>
</html>