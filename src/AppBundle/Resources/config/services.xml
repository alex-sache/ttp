<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="app_bundle.service.graph.class">AppBundle\Service\GraphService</parameter>
    </parameters>

    <services>
        <service id="app_bundle.service.graph" class="%app_bundle.service.graph.class%">
            <call method="setNeo4jConnection">
                <argument>%neo4j_connection%</argument>
            </call>
            <call method="setNeo4jUri">
                <argument>%neo4j_uri%</argument>
            </call>
        </service>
    </services>
</container>

